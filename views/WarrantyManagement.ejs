<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Warranty Management</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <nav style="display: flex; justify-content: space-between; align-items: center; padding: 1em; background-color: #b0b3c6; color: white; width: 100%; position: fixed; top: 0; left: 0; z-index: 1000;">
        <div class="logo" style="font-size: 1.5em;">
            <img src="/images/BitBox_logo1.png" alt="">
        </div>
        <div class="title" style="font-size: 1.2em; margin-right: 25px;color: black;font-weight: 600;">
            Bitbox Admin Panel
        </div>
        <% if (loggedIN) { %> <!-- Check if user is logged in -->
            <form action="/api/auth/logout" method="POST" style="margin-right: 10px;">
                <button type="submit" style="background-color: #ff0000; color: white; border: none; padding: 10px; font-size: 1em; cursor: pointer; border-radius: 4px; transition: background-color 0.3s ease;">Logout</button>
            </form>
        <% } %>
    </nav>
    
    <div class="dashboard" style="margin-top: 8%;">
        <h1>Dashboard</h1>
        <div class="stats-container">

            <% if (accessTo.includes('RegisterWarranty')) { %>
                <div class="stat-box" style="background-color: #ffc03d;" onclick="redirectTo('/api/warrantyManagement/register-warranty')">
                    <div class="stat-title">Register Warranty</div>
                </div>
            <% } %>

            <% if (accessTo.includes('SingleVerification')) { %>
                <div class="stat-box" style="background-color: #b0b3c6;" onclick="redirectTo('/api/warrantyManagement/singel-warranty-verify')">
                    <div class="stat-title">Single Warranty Verification</div>
                </div>
            <% } %>

            <% if (accessTo.includes('BulkVerification')) { %>
                <div class="stat-box" style="background-color: #ffc03d;" onclick="redirectTo('/api/warrantyManagement/bulk-warranty-verify')">
                    <div class="stat-title">Bulk Warranty Verification</div>
                </div>
            <% } %>

            <% if (accessTo.includes('ExpiringWarranties')) { %>
                <div class="stat-box" style="background-color: #b0b3c6;" onclick="redirectTo('/api/warrantyManagement/expiring-warranty-render')">
                    <div class="stat-title">Expiring Warranties</div>
                </div>
            <% } %>

            <% if (accessTo.includes('singelVerified')) { %>
                <div class="stat-box" style="background-color: #ffc03d;" onclick="redirectTo('/api/warrantyManagement/singel-Verified_Warranty')">
                    <div class="stat-title">Single Verified Warranties</div>
                </div>
            <% } %>

            <% if (accessTo.includes('bulkVerified')) { %>
                <div class="stat-box" style="background-color: #b0b3c6;" onclick="redirectTo('/api/warrantyManagement/bulk-Verified_Warranty')">
                    <div class="stat-title">Bulk Verified Warranties</div>
                </div>
            <% } %>
            

            <!-- Additional sections can be added here based on accessTo array -->
            
        </div>
    </div>
</body>
</html>

<script>
    function redirectTo(page) {
        window.location.href = page;
    }
</script>
